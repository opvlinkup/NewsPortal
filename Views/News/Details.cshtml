@model NewsPortal.Models.ViewModels.ArticleViewModel
@{
    ViewData["Title"] = Model.Title;
}

<h2>@Model.Title</h2>
<h3 class="text-secondary">@Model.Subtitle</h3>
<p class="text-muted">@Model.CreatedAt.ToString("dd MMM yyyy")</p>

@if (!string.IsNullOrEmpty(Model.ImagePath))
{
    <div class="mb-3 text-center">
        <img src="@Url.Content(Model.ImagePath)"
             alt="@Model.Title"
             class="img-fluid rounded shadow"
             style="max-height:600px; object-fit:cover;" />
    </div>
}

<div>
    @Html.Raw(Model.Text)
</div>

<a class="btn btn-primary mt-3" href="@Url.Action("Index", "News")">Back</a>