@model NewsPortal.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Регистрация администратора";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container d-flex justify-content-center align-items-center" style="min-height:80vh;">
    <div class="card bg-dark text-light shadow-lg p-4" style="max-width:420px;width:100%;">
        <h2 class="mb-4 text-center">Регистрация администратора</h2>

        <form asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control bg-secondary text-light border-0" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control bg-secondary text-light border-0" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control bg-secondary text-light border-0" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Зарегистрировать</button>

            <div asp-validation-summary="All" class="text-danger mt-3"></div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}